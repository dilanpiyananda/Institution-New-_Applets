@model List<Institute.DataAccess.Domain.TeacherDTO>
@{
    ViewBag.Title = "Our Teachers";
}

<header>
    <!-- Carousel wrapper -->
    <div id="introCarouselOurTeam" class="carousel slide carousel-fade shadow-2-strong" data-mdb-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-mdb-target="#introCarousel" data-mdb-slide-to="0" class="active"></li>
        </ol>

        <!-- Inner -->
        <div class="carousel-inner">
            <!-- Single item -->
            <div class="carousel-item-our-team active">
                <div class="mask" style="background-color: rgba(0, 0, 0, 0.6);">
                    <div class="d-flex justify-content-center align-items-center h-100">
                        <div class="text-white text-center">
                            <h1 class="mb-3 capital-text">Our Teachers</h1>
                            <h5 class="mb-4">Noble Education</h5>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Single item -->
        </div>
        <!-- Inner -->
    </div>
    <!-- Carousel wrapper -->
</header>
<main class="mt-5">
    <div class="container">
        <!--Section: Content-->
        <section class="text-center">
            <div class="row d-flex justify-content-center align-items-center h-100">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var a in Model)
                    {
                        string base64String = Convert.ToBase64String(a.Image);
                        // Construct data URI
                        string imageSrc = $"data:image/jpeg;base64,{base64String}";

                        <div class="col-md-4 col-xl-4 mt-5">

                            <div class="card" style="border-radius: 15px;">
                                <div class="card-body text-center">
                                    <div class="mt-3 mb-4">
                                        <img src="@imageSrc"
                                             class="rounded-circle img-fluid" style="width: 100px;" />
                                    </div>
                                    <h4 class="mb-2">@a.TeacherName</h4>
                                    <p class="text-muted mb-4">
                                        Teacher <span class="mx-2"></span>
                                    </p>
                                    <hr />
                                    <div class="row align-items-center">
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-2 text-center">
                                            <button type="button" class="btn btn-outline-primary btn-floating">
                                                <i class="fas fa-phone fa-lg"></i>
                                            </button>
                                        </div>
                                        <div class="col-sm-8 text-left" style="text-align:left !important; color:#1266f1">
                                            @a.Tel
                                        </div>
                                    </div>
                                    <div class="row align-items-center mb-2 mt-1">
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-2 text-center">
                                            <button type="button" class="btn btn-outline-primary btn-floating">
                                                <i class="fa fa-envelope fa-lg" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                        <div class="col-sm-8 text-left  " style="text-align:left !important;color:#1266f1">
                                            @a.Email
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    }

                }


            </div>
        </section>
        <!--Section: Content-->
    </div>
</main>


